.menu
    text-align right
    overflow hidden
    font-size 1.2vw
        
    .menu__item
        color black
        text-decoration none
        margin 5px
        
    .menu__item--active
        background teal
        color black
        border 5px solid teal
        color white

.navi
    background teal
    color white
    border 10px solid teal
    font-size 1vw
    
    &__form
        float right
        margin-top -3px
        
    &__but
        background dodgerblue
        color white
        border-radius 5px
        border dodgerblue
        font-size 1vw
        
    &__text
        font-size 1vw

.main
    width 95%
    margin auto

    img
        width 100%
        height 100%


.photos
    display flex
    flex-wrap wrap
    justify-content center
    width 100%
    margin 10px
    
    &__item
        height 100px
        overflow hidden

        &--small
            width 30%

        &--big
            width 68%
    
    img
        margin 6px
        object-fit cover


.aparts-grid
    display grid
    grid-template-rows repeat(4, 0.5fr)
    grid-template-columns repeat(3, 1fr)
    overflow hidden

    .big-block
        display grid
        grid-template-rows 0.2fr 2fr

        &__header
            text-align center
            font-size 1vw
            grid-row 1
            grid-column 1 / span 2

        &__text
            text-align justify
            font-size 1vw
            border 10px solid white

        &__button
            display block
            background dodgerblue
            color white
            border-radius 5px
            font-size 0.9vw
            margin-top 5px
            float right

            &--left-but
                float none

        &--first-big-apart
            grid-row 1 / span 2
            grid-column 1 / span 2
            grid-template-columns 2fr 1fr

        &--second-big-apart
            grid-row 3 / span 2
            grid-column 1 / span 2
            grid-template-columns 1fr 2fr

    .small-block
        display grid
        grid-template-rows 20% 80%
        grid-template-columns repeat(2, 50%)
        border-left 2px solid black
        margin-left 5px
        padding 5px

        &__button
            font-size 0.6vw
        
        &__text
            font-size 0.6vw
            
        &__header
            font-size 0.6vw
            text-align right
            padding-right 5px
            
        &__image
            grid-row 1 / -1
            grid-column 2


@media (max-width: 800px)
    .menu
        text-align center
        font-size 2.4vw
        
    .navi
        font-size 2.4vw
        
        &__form
            margin-top -2px
            
        &__but
            font-size 2vw
            
        &__text
            font-size 2vw
    
    .photos 
        &__item
            width 100%;
            height 50px;
            
    .aparts-grid
        grid-template-columns 1fr
        grid-template-rows repeat(6, 1fr)
        gap 10px

        .big-block
        .small-block

            &__text
                font-size 2vw;
        
            &__header
                font-size 2.2vw;

            &__button
                font-size 2vw;
            
            &
                border none

            &__button
                font-size 2vw;
            
            &--first-big-apart
                grid-row 1
                grid-column 1
                
            &--second-big-apart
                grid-row 2
                grid-column 1
